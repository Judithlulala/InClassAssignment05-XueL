<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/title_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"/>


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/message_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"/>
    <CheckBox
        android:id="@+id/titleOnly"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_box"
        android:padding="20dp"/>
    <Button
        android:id="@+id/send_email_button"
        style="@style/styleForButton"
        android:text="@string/first_button"/>
    <Button
        android:id="@+id/launch_activity_button"
        style="@style/styleForButton"
        android:text="@string/second_button"/>
    <Button
        android:id="@+id/camera_button"
        style="@style/styleForButton"
        android:text="@string/third_button"/>


</LinearLayout>

</ScrollView>